<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <div class="form-group mb-3">
                        <h3>Nuevo enlace</h3>
                    </div>
                    <form action="/links/add" method="post">
                    <div class="form-group mb-3">
                        <input type="text" name="title" id="" class="form-control" name="title" placeholder="Titulo del sitio" autofocus>
                    </div>
                    <div class="form-group mb-3">
                        <input type="url" name="url" id="" class="form-control" placeholder="Url">
                    </div>
                    <div class="form-group mb-3">
                        <textarea name="description" id="" rows="2" class="form-control" placeholder="Descripcion del sitio"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-block">Guardar</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>