<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <div class="form-group mb-3">
                        <h3>Editar enlace</h3>
                    </div>
                    <form action="/links/edit/{{link.id}}" method="post">
                        <div class="form-group mb-3">
                            <input type="text" name="title" id="" value="{{link.title}}" class="form-control" name="title" placeholder="title"
                                autofocus>
                        </div>
                        <div class="form-group mb-3">
                            <input type="url" name="url" id="" value="{{link.url}}" class="form-control" placeholder="Url">
                        </div>
                        <div class="form-group mb-3">
                            <textarea name="description" id="" rows="2" class="form-control"
                                placeholder="description">{{link.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Editar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>